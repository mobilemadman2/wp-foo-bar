{
  "name": "xwp/wp-foo-bar",
  "type": "wordpress-plugin",
  "description": "WordPress plugin scaffold/template",
  "homepage": "https://github.com/xwp/wp-foo-bar",
  "license": "GPLv2",
  "require-dev": {
    "automattic/vipwpcs": "*",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.4.4",
    "php-coveralls/php-coveralls": "2.1",
    "phpcompatibility/phpcompatibility-wp": "*",
    "slowprog/composer-copy-file": "0.2.1",
    "xwp/wordpress-tests-installer": "*",
    "xwp/wp-dev-lib": "dev-feature/composer-first"
  },
  "prefer-stable" : true,
  "require": {
    "php": ">=5.3"
  },
  "scripts": {
    "phpcs": "./vendor/bin/phpcs . --standard=phpcs.ruleset.xml",
    "phpunit": [
      "SlowProg\\CopyFile\\ScriptHandler::copy",
      "tests/bin.sh xdebug_off /srv/www/wordpress-default/public_html/wp-content/plugins/foo-bar"
    ],
    "phpunit-coverage": [
      "SlowProg\\CopyFile\\ScriptHandler::copy",
      "tests/bin.sh xdebug_on /srv/www/wordpress-default/public_html/wp-content/plugins/foo-bar"
    ],
    "post-install-cmd": "if [ ! -f .git/hooks/pre-commit ]; then vendor/xwp/wp-dev-lib/scripts/install-pre-commit-hook.sh; fi",
    "readme": "./vendor/xwp/wp-dev-lib/scripts/generate-markdown-readme"
  },
  "extra": {
    "installer-name": "foo-bar",
    "copy-file": {
      "tests/autoload.php": "vendor/xwp/wordpress-tests/phpunit/wp-tests-config.php"
    }
  }
}